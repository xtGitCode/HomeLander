<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="TextInputLayerStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColorHint">@color/darkgrey</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
    </style>

    <style name="Button.Yellow" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/yellow</item>
    </style>

    <style name="Button.DarkRed" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/darkred</item>
    </style>

    <style name="Button.Link" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MainTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/mainbg</item>
        <item name="android:textColor">@color/darkblue</item>
    </style>

    <style name="AlertTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/lightred</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EmergencyTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/brightred</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>